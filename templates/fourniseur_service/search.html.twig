{% for fr in fourniseur %}
    <div class="col-12 col-sm-6 col-md-6 d-flex align-items-stretch">
        <div class="card bg-light">
            <div class="card-header text-muted border-bottom-0">

            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-7">
                        <h2 class="lead"><b> {{ fr.fourniseur }}</b></h2>
                        <p class="text-muted text-sm"><b>service: </b> {{ fr.service.libelle }}</p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Adresse: {{ fr.gouvernorat }} </li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-map"></i></span> map #:{{ fr.maplocation }}</li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> numero :{{ fr.numero }}</li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span>: {{ fr.contact }}</li>
                        </ul>
                    </div>
                    <div class="col-5 text-center">
                        <img src="{{ asset("distAdmin/img/user1-128x128.jpg")}}" alt="" class="img-circle img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="text-right">
                    <a href="{{ path('deletefourniseur',{'id':fr.id}) }}" class="btn btn-sm bg-teal">
                        <i class="fas fa-trash"></i> supprimer
                    </a>
                    <a  href="{{ path('updatefourniseur',{'id':fr.id}) }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-user"></i> modifier
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}