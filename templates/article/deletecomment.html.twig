<form method="post" action="{{ path('article_deletecomment', {'id': comment.comment_id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.comment_id) }}">
    <button class="btn">Delete</button>
</form>
