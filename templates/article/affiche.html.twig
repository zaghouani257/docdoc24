{% extends 'baseBack.html.twig' %}
{% block title %}Gestion Articles{% endblock %}
{% block contentHeader %} Les articles {% endblock %}
{% block  contentMain %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <a class="btn bg-gradient-info float-left " href="{{ path('Ajoutercatarticle') }}">
                        <i class="far fa-plus-square "> ajouter
                        </i>

                    </a>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>titre</th>
                            <th>Commentaires</th>

                        </tr>
                        </thead>
                        <tr>
                         {% for cat in article %}

                        <td>{{ cat.id}}</td>
                            <td>{{ cat.titre }}</td>
                            {% for c in cat.commentaires %}

                                <td> {{ c.contenu }} </td>
                             <td >
                             <a class="btn btn-danger btn-sm" href="{{ path('deletecoarticle',{'comment_id':c.id}) }}">
                                 <i class="fas fa-trash">
                                 </i>
                                 supprimer
                             </a>
                             </td>
                         {% endfor %}

                            <td class="project-actions text-right">
                                <a class="btn btn-success btn-sm" href="{{ path('catarticle',{'id':cat.id , 'user_id':app.user.id} ) }}">
                                    <i class="fas fa-user">
                                    </i>
                                    index
                                </a>
                                <a class="btn btn-primary btn-sm" href="{{ path('detailscatarticle',{'id':cat.id}) }}">
                                    <i class="fas fa-folder">
                                    </i>
                                    DÃ©tails
                                </a>
                                <a class="btn btn-info btn-sm" href="{{ path('updatecatarticle',{'id':cat.id}) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    modifier
                                </a>
                                <a class="btn btn-danger btn-sm" href="{{ path('deletecatarticle',{'id':cat.id}) }}">
                                    <i class="fas fa-trash">
                                    </i>
                                    supprimer
                                </a>
                            </td>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
{% endblock %}