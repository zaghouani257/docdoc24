{% extends 'base.html.twig' %}
{%  block body  %}
    <div class="ml-servicesCategories">
        <div class="ml-container container">
            <div class="ml-shopbar" style="background: #00cfa1">
                <div class="ml-shopbar__item">
                    <p class="ml-shopbar__title">SERVICES</p>
                </div>
                <div class="ml-shopbar__item">
                    <div class="ml-shopbar__filter">
                        <form action="#" method="get">
                            <label class="ml-shopbar__filterLabel" for="ml-shopbar__select1">TRI AVEC:</label>
                            <select id="ml-shopbar__select1" class="ml-shopbar__select" name="ml-shopbar__select">
                                <option value="1">LIBELLE</option>
                                <option value="2">STARS</option>
                                <option value="3">PRIX</option>
                            </select>
                        </form>
                    </div><!--/.ml-shopbar__filter-->

                    <div class="ml-shopbar__filter">
                        <div class="ml-shopbar__display">
                            <form action="#" method="get">
                                <input class="ml-search__input" type="text" placeholder="SEARCH ...">
                                <button class="ml-search__submit glyphicon glyphicon-search" type="submit" value="go"></button>
                            </form>
                        </div><!--/.ml-shopbar__display-->
                    </div><!--/.ml-shopbar__filter-->
                </div><!--/.ml-shopbar__item-->
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <h6 class="ml-servicesCategories__title">SERVICES</h6>
                    <div class="row">
                        {% for service in services %}
                            <div class="col-md-3 col-sm-6">
                                <div class="ml-imageBox ml-imageBox--detailsHover ml-imageBox--hasShadow ml-imageBox--mb-40">
                                    <a class="ml-imageBox__anchor" href="{{ path('service',{'id':service.id}) }}">
                                        <div class="ml-imageBox-wrapper">
                                            <div class="ml-imageBox-imgWrapper">
                                                <img src="{{ asset('distClient/img-assets/logo.png') }} " alt="">
                                            </div>
                                        </div><!--/.ml-imageBox-wrapper-->
                                        <div class="ml-imageBox-details ml-text--center">
                                            <h4 class="ml-imageBox-title">{{ service.libelle }}</h4>
                                        </div><!--/.ml-imageBox-details-->
                                    </a><!--/.ml-imageBox__anchor-->
                                </div><!--/.ml-imageBox-->
                            </div><!--/.col-md-3 col-sm-6-->
                        {% endfor %}




                    </div><!--/.row-->
                </div><!--/.col-md-12 col-sm-12-->
            </div><!--/.row-->
        </div><!--/.ml-container container-->
    </div>

{% endblock %}
