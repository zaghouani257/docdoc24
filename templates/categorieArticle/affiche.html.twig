{% extends 'baseBack.html.twig' %}
{% block title %}Gestion Categories{% endblock %}
{% block contentHeader %} Les catégories {% endblock %}
{% block  contentMain %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <a class="btn bg-gradient-info float-left " href="{{ path('Ajoutercatcategorie') }}">
                        <i class="far fa-plus-square "> ajouter
                        </i>

                    </a>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>nom</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr {% for cat in categorie %}>
                            <td>{{ cat.id}}</td>
                            <td>{{ cat.nom }}</td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="{{ path('detailscatcategorie',{'id':cat.id}) }}">
                                    <i class="fas fa-folder">
                                    </i>
                                    Détails
                                </a>
                                <a class="btn btn-info btn-sm" href="{{ path('updatecatcategorie',{'id':cat.id}) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    modifer
                                </a>
                                <a class="btn btn-danger btn-sm" href="{{ path('deletecatcategorie',{'id':cat.id}) }}">
                                    <i class="fas fa-trash">
                                    </i>
                                    supprimer
                                </a>
                            </td>
                        </tr {% endfor %}>

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
{% endblock %}