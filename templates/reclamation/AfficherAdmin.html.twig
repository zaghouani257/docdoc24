                    <th>RÃ©pondre</th>
                    <th style="width: 60px">Supprimer</th>
                </tr>
                </thead>
                <tbody id="myTable">
                {% for i in reclamation  %}
                <tbody id="myTable">
                    <tr>
                        <td>{{ i.id }}</td>
                        <td>{{ i.motif }}</td>
                        <td>{{ i.description }}</td>
                        <td>{{ i.user.email }}</td>
