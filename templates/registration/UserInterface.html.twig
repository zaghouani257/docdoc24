<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    {#<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt=""/>#}
                    <img src="{{ asset('uploads/images/' ~ app.user.image) }}" class="profile-img">
                    <div class="file btn btn-lg btn-primary">
                        <a href="{{ path('updateimage',{'id':app.user.id}) }}">Ajouter une Photo</a>
                        {#<input type="file" name="file"/>#}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        {{ app.user.prenom }} {{ app.user.nom }}
                    </h5>
                    <h6>
                        {{ app.user.type |upper }}
                    </h6>
                    <p class="proile-rating">Profil de l'utilsateur</p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active show" id="home-tab" data-toggle="tab" href="#home"  target="_self" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " id="profile-tab" data-toggle="tab" href="#profile" role="tab"  target="_self" aria-controls="profile" aria-selected="false">Détails</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                {#<input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>#}
                {#<button type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"></button>#}
               <div>
                <td><a href="{{ path('ModifierUser',{'id':app.user.id}) }}"> Editer votre profil </a></td></div>
                <div><a href="{{ path('userr')}}">Page d'accueil</a></div>
                {#<td><a href="{{ path('ModifierUser',{'id':app.user.id}) }}"> Modifier </a></td>#}

            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" name="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>User Id</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.id }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Nom</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.prenom }} {{ app.user.nom }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.email }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Numéro de téléphone</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.numtel }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Date de naissance</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.dnaissance|date }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Adresse</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.adresse }}</p>
                            </div>
                        </div>
                                {% if(app.user.type == "medecin") %}
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Disponabilité</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.disponabilite | date}}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>CIN Recto</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.cinrecto }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>CIN Verso</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.cinverso }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Matricule</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.matricule }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>CNAM</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.cnam }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>CNSS</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.cnss }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Spécialité</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p>{{ app.user.specialite}}</p>
                                        </div>
                                    </div>
                                {% endif %}
                        {% if(app.user.type == "pharmacien") %}
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CIN Recto</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.cinrecto }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CIN Verso</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.cinverso }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Matricule</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.matricule }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CNAM</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.cnam }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CNSS</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.cnss }}</p>
                                </div>
                            </div>
                        {% endif %}
                        {% if(app.user.type == "delegue") %}
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CIN Recto</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.cinrecto }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CIN Verso</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.cinverso }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Societé</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ app.user.societe }}</p>
                                </div>
                            </div>

                        {% endif %}
                    </div>
                    <div class="tab-pane fade" id="profile" name="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Experience</label>
                            </div>
                            <div class="col-md-6">
                                <p>Expert</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Hourly Rate</label>
                            </div>
                            <div class="col-md-6">
                                <p>10$/hr</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Total Projects</label>
                            </div>
                            <div class="col-md-6">
                                <p>230</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>English Level</label>
                            </div>
                            <div class="col-md-6">
                                <p>Expert</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Availability</label>
                            </div>
                            <div class="col-md-6">
                                <p>6 months</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Your Bio</label><br/>
                                <p>Your detail description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
</body>
</html>