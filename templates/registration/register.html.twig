
{% extends 'baseLR.html.twig' %}


{% block asideright %}


    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}


    <div class="form-group">
        <h7>Nom <span class="text-danger">*</span></h7>
        <div class="input-group">

            {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control', 'placeholder':''} }) }}
        </div>
    </div>
    <div class="form-group">
        <h7>Prénom <span class="text-danger">*</span></h7>
        <div class="input-group">

            {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-control', 'placeholder':''} }) }}
        </div>
    </div>
<div class="form-group">
    <h7>Adresse e-mail <span class="text-danger">*</span></h7>
    <div class="input-group">

        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder':''} }) }}
    </div>
</div>

    <div class="form-group">
        <h7>Mot de passe <span class="text-danger">*</span></h7>

    {{ form_widget(registrationForm.plainPassword, {
        label: 'Password'
    }) }}
    </div>

    <div class="form-group">
        <h7>Date de naissance <span class="text-danger">*</span></h7>
            {{ form_widget(registrationForm.dnaissance)}}
    </div>
    <div class="form-group">
        <h7>Adresse <span class="text-danger">*</span></h7>
        {{ form_widget(registrationForm.adresse) }}
    </div>

    <div class="form-group">
        <h7>Numéro de télephone<span class="text-danger">*</span></h7>
        <div class="input-group">

            {{ form_widget(registrationForm.numtel, { 'attr': {'class': 'form-control', 'placeholder':''} }) }}
        </div>
    </div>

<div class="form-group">
    <h7>Vous êtes <span class="text-danger">*</span></h7>
    {{ form_widget(registrationForm.type) }}
</div>



    {{ form_row(registrationForm.agreeTerms) }}

    <div class="form-group">
        <h9> Veuillez tapez les caractères que vous voyez sur l'image pour continuer.</h9>
        <div class="input-group">

            {{ form_widget(registrationForm.captcha) }}
        </div>
    </div>

    <button type="submit" class="btn btn-block btn-info"><h> Inscription</h></button>
    <button type="reset" class="btn btn-block btn-info"><h> Annuler</h></button>
    {{ form_end(registrationForm) }}
{% endblock %}

